<?xml version="1.0" encoding="UTF-8" ?>
<Grid
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Controls="clr-namespace:PerrijosGatijos.Views.Controls"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core" 
    ios:Page.UseSafeArea="true"
    x:Class="PerrijosGatijos.Views.Controls.FlyoutFooter"
    ColumnDefinitions="20,*"
    Padding="20"
    HeightRequest="100">
    <Grid.GestureRecognizers>
        <TapGestureRecognizer Command="{Binding CloseSessionCommand}"/>
    </Grid.GestureRecognizers>

    <Controls:IconControl Grid.Column="0"
                                      ResourceId="CloseSession"
                                      VerticalOptions="Center"
                                      HorizontalOptions="End"/>
    <Label Grid.Column="1"
                       Text="Cerrar Sesion"
                       VerticalOptions="Center"
                       HorizontalOptions="StartAndExpand"/>

</Grid>

